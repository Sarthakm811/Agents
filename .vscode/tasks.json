{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Setup Agent Environment",
            "type": "shell",
            "command": "python -m venv .venv; .\\.venv\\Scripts\\Activate.ps1; pip install -r requirements.txt",
            "group": "build",
            "presentation": {
                "reveal": "always",
                "panel": "new"
            }
        },
        {
            "label": "Run Agent Test",
            "type": "shell",
            "command": ".\\.venv\\Scripts\\python.exe agents/domain_agent.py \"Deep Learning\"",
            "group": "test",
            "dependsOn": "Setup Agent Environment"
        },
        {
            "label": "Start Ollama (Local Models)",
            "type": "shell",
            "command": "ollama serve",
            "isBackground": true,
            "group": "build"
        },
        {
            "label": "Run Backend",
            "type": "shell",
            "command": "uvicorn backend.main:app --host 0.0.0.0 --port 8000",
            "group": "test",
            "presentation": {
                "reveal": "always",
                "panel": "new"
            }
        },
        {
            "label": "Install Frontend",
            "type": "shell",
            "command": "npm install",
            "options": {
                "cwd": "frontend"
            },
            "group": "build",
            "presentation": {
                "reveal": "always",
                "panel": "new"
            }
        },
        {
            "label": "Run Frontend",
            "type": "shell",
            "command": "npm run dev",
            "options": {
                "cwd": "frontend"
            },
            "group": "test",
            "presentation": {
                "reveal": "always",
                "panel": "new"
            }
        }
    ]
}